<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin_chinatsuservices.styles.css" asp-append-version="true" />
    <style>
        /* Island navbar */
        .navbar-island {
            margin: 5px;
            border-radius: 12px;
            background-color: #212529 !important; /* dark */
            width: fit-content;
            padding: 0.4rem 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.3);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .navbar-island:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.4);
            }

            .navbar-island .nav-link {
                color: #f8f9fa !important;
                margin-left: 0.5rem;
                position: relative;
                transition: color 0.2s ease, transform 0.2s ease;
            }

                /* Add a subtle underline animation */
                .navbar-island .nav-link::after {
                    content: "";
                    position: absolute;
                    width: 0;
                    height: 2px;
                    bottom: 0;
                    left: 0;
                    background-color: #4b80e8; /* accent color */
                    transition: width 0.3s ease;
                }

                .navbar-island .nav-link:hover {
                    color: #ffffff;
                    transform: scale(1.05);
                }

                    .navbar-island .nav-link:hover::after {
                        width: 100%;
                    }

            .navbar-island .navbar-brand {
                color: #fff !important;
                font-weight: 600;
                margin-right: 1rem;
                transition: transform 0.2s ease, color 0.2s ease;
            }

                .navbar-island .navbar-brand:hover {
                    transform: scale(1.05);
                    color: #4b80e8;
                }
    </style>
</head>
<body>
    <header>
        <!-- Island navbar -->
        <nav class="navbar navbar-expand-sm navbar-dark navbar-island">
            <a class="navbar-brand"">Admin</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/ServicePannel">Service Pannel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/UPS">UPS</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
